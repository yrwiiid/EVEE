<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Judul Halaman -->
    <TextView
        android:id="@+id/txtTitleCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalender Menstruasi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="12dp" />

    <!-- Material CalendarView -->
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="all"
        app:mcv_firstDayOfWeek="monday"
        app:mcv_selectionColor="@color/purple_500"
        app:mcv_headerTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:mcv_dateTextAppearance="@style/TextAppearance.AppCompat.Medium" />

    <!-- Teks Rentang yang Dipilih -->
    <TextView
        android:id="@+id/textSelectedRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum ada tanggal dipilih"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal" />

    <!-- Tombol Simpan / Tandai -->
    <Button
        android:id="@+id/btnSavePeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tandai Sebagai Hari Haid"
        android:layout_marginTop="16dp"/>
</LinearLayout>
