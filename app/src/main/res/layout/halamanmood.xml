<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF7EB"
    android:padding="24dp">

    <!-- ðŸ”¹ Bar Atas -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/txtTitleMood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood"
            android:textColor="#8C183B"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="6dp" />

        <ImageView
            android:id="@+id/btnNotification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_notification"
            android:contentDescription="Notifikasi"
            app:tint="#8C183B" />
    </RelativeLayout>

    <!-- ðŸ”¹ Pertanyaan -->
    <TextView
        android:id="@+id/titleMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bagaimana moodmu\nhari ini?"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />

    <!-- ðŸ”¹ Hari & Tanggal -->
    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rabu, 12 November 2025"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_marginTop="4dp"
        android:layout_gravity="center_horizontal" />

    <!-- ðŸ”¹ Grafik Batang -->
    <com.example.evee.MoodBarChartView
        android:id="@+id/barChartView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <!-- ðŸ”¹ Spacer agar emoji dan tombol di bawah -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- ðŸ”¹ ScrollView Emoji -->
    <HorizontalScrollView
        android:id="@+id/emojiScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/emojiContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingHorizontal="150dp" />
    </HorizontalScrollView>

    <!-- ðŸ”¹ Mood Text -->
    <TextView
        android:id="@+id/moodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senang"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal" />

    <!-- ðŸ”¹ Tombol Simpan -->
    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIMPAN"
        android:textColor="#FFFFFF"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium"
        android:backgroundTint="#8C183B"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp" />

</LinearLayout>
