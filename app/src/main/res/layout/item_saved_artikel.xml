<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroud_artikel"
    android:padding="10dp"
    android:layout_marginBottom="10dp">

    <!-- GAMBAR ARTIKEL -->
    <ImageView
        android:id="@+id/imgSavedThumb"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/artikel1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- JUDUL -->
    <TextView
        android:id="@+id/txtSavedTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#444"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imgSavedThumb"
        app:layout_constraintTop_toTopOf="@id/imgSavedThumb"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TANGGAL / HARI UPLOAD DI BAWAH JUDUL -->
    <TextView
        android:id="@+id/txtSavedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 hari yang lalu"
        android:textSize="12sp"
        android:textColor="#777"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@id/txtSavedTitle"
        app:layout_constraintTop_toBottomOf="@id/txtSavedTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
