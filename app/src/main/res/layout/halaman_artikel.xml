<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7E6">

    <!-- Judul -->
    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artikel"
        android:textColor="#6A0D4A"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Ikon Filter -->
    <ImageView
        android:id="@+id/filter"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/filter"
        app:tint="#333"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/judul"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Search Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/pencarian"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/judul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/icSearch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cari"
            android:tint="#A31641"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <EditText
            android:id="@+id/cari"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="search article"
            android:textColorHint="#A38D8D"
            android:paddingStart="8dp"
            app:layout_constraintStart_toEndOf="@id/icSearch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ScrollView Artikel -->
    <ScrollView
        android:id="@+id/scrollArtikel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Artikel -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroud_artikel"
                android:padding="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imgArtikel1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/artikel1"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/judulartikel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Mengenal dan Mengatasi Nyeri Haid"
                    android:textColor="#555555"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/imgArtikel1"
                    app:layout_constraintTop_toTopOf="@id/imgArtikel1"
                    app:layout_constraintEnd_toStartOf="@id/simpan" />

                <TextView
                    android:id="@+id/info1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2 hari lalu • 5 min read"
                    android:textColor="#777"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/judulartikel"
                    app:layout_constraintTop_toBottomOf="@id/judulartikel" />

                <ImageView
                    android:id="@+id/simpan"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/simpanartikel"
                    android:tint="#A31641"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Card Artikel 2 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroud_artikel"
                android:padding="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imgArtikel2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/artikel2"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/judulartikel2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Obat Untuk Mengatasi Nyeri Haid"
                    android:textColor="#555555"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/imgArtikel2"
                    app:layout_constraintTop_toTopOf="@id/imgArtikel2"
                    app:layout_constraintEnd_toStartOf="@id/simpan2" />

                <TextView
                    android:id="@+id/info2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3 hari lalu • 4 min read"
                    android:textColor="#777"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/judulartikel2"
                    app:layout_constraintTop_toBottomOf="@id/judulartikel2" />

                <ImageView
                    android:id="@+id/simpan2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/simpanartikel"
                    android:tint="#6A0D4A"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroud_artikel"
                android:padding="10dp"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/imgArtikel3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/artikel3"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/judulartikel3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Memahami Siklus Menstruasi"
                    android:textColor="#555555"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@id/imgArtikel3"
                    app:layout_constraintTop_toTopOf="@id/imgArtikel3"
                    app:layout_constraintEnd_toStartOf="@id/simpan3" />

                <TextView
                    android:id="@+id/info3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3 hari lalu • 4 min read"
                    android:textColor="#777"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/judulartikel3"
                    app:layout_constraintTop_toBottomOf="@id/judulartikel3" />

                <ImageView
                    android:id="@+id/simpan3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/simpanartikel"
                    android:tint="#6A0D4A"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
